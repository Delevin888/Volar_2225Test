{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "../src/**/*",
    "../src/**/*.vue",
    "../src/@types/**/*.d.ts",
    "../src/version.json",
    "../src/assets/locales/*.json"
  ],
  "exclude": ["../src/**/__tests__/*"],
  "compilerOptions": {
    "rootDir": "../",
    "composite": true,
    "allowJs": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["DOM.Iterable"],
    "types": ["node", "jsdom"]
  }
}
